<div class="container col-12">
  <div class="row new-form ">
    <div class="col-6 offset-3">
      <h2>Add a new dose</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
