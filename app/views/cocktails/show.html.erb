<div class="row container col-12">
  <div class="card-show col-4 offset-4" style="width: 18rem;">
    <div class="card-header">
      <%= @cocktail.name %>
    </div>
      <%= cl_image_tag @cocktail.photo.key, width: 200, height: 200, :gravity=>"fill" %>
    <ul class="list-group list-group-flush">
      <% @cocktail.doses.each do |dose|%>
      <li class="list-group-item"> <%= dose.ingredient.name %> </li>
      <br/>
      <li class="list-group-item"><%= dose.description %></li>
    </ul>
    <br>
    <%= link_to "⚠️⚠️⚠️ Destroy dose ⚠️⚠️⚠️", dose_path(dose), method: :delete, class: 'btn btn--stripe' %>
    <% end %>
    <br>
    <%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail), class: 'btn btn--stripe' %>
    <br>
    <%= link_to "List of Cocktails", cocktails_path, class: 'btn btn--stripe' %>
  </div>
